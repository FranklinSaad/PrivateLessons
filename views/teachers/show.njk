{% extends "layout.njk" %}

{% block content %}
    <div class="card">
        <section 
            class="avatar"
            style="background: url({{ instructor.avatar_url }}) no-repeat center center / cover"></section>
        <section class="details">

            <h3>Detalhes</h3>

            <div class="item">
                <div>Professor(a)</div>
                <div>{{ teacher.name }}</div>
            </div>

            <div class="item">
                <div>Idade</div>
                <div>{{ teacher.age }}</div>
            </div>

            <div class="item">
                <div>Tipo de aula</div>
                <div>{{ "Presencial" if teacher.type == "P" else "À distância" }}</div>
            </div>

             <div class="item">
                <div>Escolaridade</div>
                <div>{{ teacher.escolaridade }}</div>
            </div>

            <div class="item">
                <div>Área de atuação</div>
                <div>
                    {% for materia in teacher.materias %}
                    <span>{{ materia }}</span>
                    {% endfor %}
                </div>
            </div>

            <div class="item">
                <div>Desde</div>
                <div>{{ teacher.created_at }}</div>
            </div>

            <a href="/teachers/{{ teacher.id }}/edit" class="button">Editar</a>

            <form action="/teachers?_method=DELETE" method="post">
                <input type="hidden" name="id" value={{teacher.id}}>
                <button type="submit">Deletar</button>
            </form>
        </section>
    </div>

{% endblock content %}  
