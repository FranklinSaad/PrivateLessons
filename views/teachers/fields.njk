<div class="item">
    <div>Avatar url</div>
    <div>
        <input 
            type="url" 
            name="avatar_url" 
            placeholder="http://"
            value="{{ teacher.avatar_url }}"
        >
    </div>
</div>

<div class="item">
    <div>Nome completo</div>
    <div>
        <input 
            type="text" 
            name="name" 
            placeholder="Nome do Professor"
            value="{{ teacher.name }}"
        >
    </div>
</div>

<div class="item">
    <div>Data de nascimento</div>
    <div>
        <input 
            type="date" 
            name="birth"
            value="{{ teacher.birth }}"
        >
    </div>
</div>

<div class="item">
    <div>Grau de escolaridade</div>
    <div>
        <select name="escolaridade">
            <option value="MC">Ensino Médio Completo</option>
            <option value="SC">Ensino Superior Completo</option>
            <option value="M">Mestrado</option>
            <option value="D">Doutorado</option>
        </select>
    </div>
</div>

<div class="item">
    <div>Tipo de aula</div>
    <div>
        <span>
            <input 
                type="radio" 
                name="type" 
                value="P" 
                {% if teacher.type == 'P' %}
                checked="checked"
                {% endif %}>Presencial</span>
        <span>
            <input 
                type="radio" 
                name="type" 
                value="D"
                {% if teacher.type == 'D' %}
                checked="checked"
                {% endif %}>À distância</span>
    </div>
</div>

<div class="item">
    <div>Área de atuação</div>
    <div>
        <input 
            type="text" 
            name="materias" 
            placeholder="Matérias (utilize vírgula para separar)"
            value="{{ teacher.materias }}"
        >
    </div>
</div>

<button type="submit">Salvar</button>